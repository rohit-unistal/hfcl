            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_30sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:id="@+id/relAboveGround"
                                android:layout_width="match_parent"
                                android:layout_height="125dp"

                                android:layout_marginLeft="@dimen/_10sdp"

                                android:layout_marginRight="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/imgAG"
                                    android:layout_width="140dp"
                                    android:layout_height="85dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"



                                    android:src="@drawable/laying2" />

                                <TextView
                                    android:id="@+id/txtAboveGround"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgAG"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="Laying"
                                    android:textColor="@android:color/black"

                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    app:fontFamily="sans-serif" />


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"

                            app:cardCornerRadius="6dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:id="@+id/relFitting"
                                android:layout_width="match_parent"
                                android:layout_height="125dp"

                                android:layout_marginLeft="@dimen/_10sdp"
                                 android:layout_marginRight="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/imgFitting"
                                    android:layout_width="140dp"
                                    android:layout_height="85dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"



                                    android:src="@drawable/pipeline2" />

                                <TextView
                                    android:id="@+id/txtFitting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgFitting"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="Fitting"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    app:fontFamily="sans-serif" />


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="6dp"

                            app:cardElevation="6dp">

