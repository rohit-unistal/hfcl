                                    android:layout_height="85dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"

                                    android:background="@drawable/circleshapewhite"

                                    android:src="@drawable/remove_gap" />
                                <!-- android:drawableRight="@drawable/baseline_build_black_18dp"-->
                                <TextView
                                    android:id="@+id/txtRemoveGap"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgFit"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"

                                    android:text="Remove Gap"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    app:fontFamily="sans-serif" />


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
