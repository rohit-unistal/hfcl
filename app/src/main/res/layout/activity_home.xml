                                    android:gravity="center"
                                    android:textColor="@android:color/black"

                                    android:text="Crossing"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    app:fontFamily="sans-serif" />


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
