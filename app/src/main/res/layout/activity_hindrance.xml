<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"


        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"



            android:orientation="horizontal">
            <TextView
                android:id="@+id/accuracytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/netstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"

                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_savenode"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/btn_design"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Update Data"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:textColor="@android:color/black" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="@dimen/_18sdp"
                android:background="@android:color/darker_gray"

                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/start_optionstv"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="left|top"
                            android:text="Hindrance Module"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"/>





                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- <androidx.cardview.widget.CardView

                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="8dp"
                 android:background="@android:color/darker_gray"

                 android:padding="@dimen/_10sdp"
                 app:cardCornerRadius="6dp"
                 app:cardElevation="6dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"

                android:padding="@dimen/_2sdp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/networktv"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="District"
                        />


                    <Spinner
                        android:id="@+id/spin_network"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="right" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/zonetv"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="Block"
                        />


                    <Spinner
                        android:id="@+id/spin_zone"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="right" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"

                    >

                    <TextView
                        android:id="@+id/dmatv"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="Scheme"
                        />


                    <Spinner
                        android:id="@+id/spin_dma"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="right" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/hindrancetypetv"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="Hindrance Type"
                        />


                    <Spinner
                        android:id="@+id/spin_httype"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="right" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp">
                    <TextView
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:text="Work Impacted"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"/>
                    <EditText
                        android:id="@+id/edwork_impacted"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="80dp"

                        android:textSize="@dimen/_12sdp"

                        android:textColor="@android:color/black"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@android:drawable/editbox_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp">
                    <TextView
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"/>
                    <EditText
                        android:id="@+id/eddescription"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="80dp"

                        android:textSize="@dimen/_12sdp"

                        android:textColor="@android:color/black"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@android:drawable/editbox_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/datefromtv"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="Date From:"
                        />

                    <EditText
                        android:id="@+id/edit_date_from"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp"
                        android:background="@android:drawable/editbox_background"
                        android:focusable="false"
                        android:gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/datetotv"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="Date To:"
                        />

                    <EditText
                        android:id="@+id/edit_date_to"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp"
                        android:background="@android:drawable/editbox_background"
                        android:focusable="false"
                        android:gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="@dimen/_2sdp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Hindrance Photo"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:textSize="@dimen/_12sdp"/>
                        <ImageView
                            android:id="@+id/imgcustomerphoto"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/_2sdp"
                            android:textColor="@android:color/black"
                            android:background="@android:drawable/editbox_background"/>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:text="SUBMIT"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>